<p id="notice"><%= notice %></p>

<h1>新着</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.body %></td>
        <td><%= link_to '詳細を見る', entry %></td>
        <td><%= link_to '編集', edit_entry_path(entry) %></td>
        <td><%= link_to '削除', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

